#:import Button kivy.uix.button.Button

WindowManager:
    MainWindow:
    main_menu:

<MainWindow>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'menu.jpg'
    name: "menu"

    GridLayout:
        cols: 3
        padding: [10, 0, 10, 0]

        Button:
            text: ""
            background_color: (1, 0.412, 0.706, 0)

        GridLayout:
            rows: 3

            Button:
                text: ""
                background_color: (1, 0.412, 0.706, 0)

            Button:
                text: ""
                background_color: (1, 0.412, 0.706, 0)

            BoxLayout:
                padding: [0, 0, 0, 100]
                Button:
                    font_size: 105
                    font_name: "Ebrima"
                    text: "Start"
                    bold: True
                    color: 0, 0, 102, 1
                    #background_normal: "start.png"
                    #background_down: "start.png"
                    background_color: (1, 0.412, 0.706, 0)
                    on_press:
                        root.press()
                    on_release:
                        root.release()
                        app.root.current = "main_menu"
                        root.manager.transition.direction = "up"

        GridLayout:
            rows: 10
            cols: 4

            Button:
                background_color: (1, 0.412, 0.706, 0)
            Button:
                background_color: (1, 0.412, 0.706, 0)
