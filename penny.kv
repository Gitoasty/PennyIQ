<textbook1>:
    name: "textbook1"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'tutorial_1.png'

    RelativeLayout:

        Button:
            background_color: (1, 1, 1, 1)
            background_normal: "settingsb.jpg"
            background_down: "settings.jpg"

            size_hint: 0.1, 0.1
            pos: (9*root.width/10, 9*root.height/10)

            on_press:
                root.press()
            on_release:
                root.release()

        Button:
            background_color: (1, 1, 1, 1)
            background_normal: "leftarrow.jpg"
            background_down: "leftarrow.jpg"

            size_hint: 0.1, 0.1
            pos: (root.width/40, root.height/40)

            on_press:
                root.press()
            on_release:
                root.release()
                app.root.current = "main_menu"
                root.manager.transition.direction = "right"

        Button:
            background_color: (1, 1, 1, 1)
            background_normal: "rightarrow.jpg"
            background_down: "rightarrow.jpg"

            size_hint: 0.1, 0.1
            pos: (9*root.width/10, root.height/40)

            on_press:
                root.press()
            on_release:
                root.release()
                app.root.current = "textbook2"
                root.manager.transition.direction = "left"

        Button:
            background_color: (1, 1, 1, 1)
            background_normal: "menusic.jpg"
            background_down: "menusic.jpg"

            size_hint: 0.1, 0.1
            pos: (root.width/40, 9*root.height/10)

            on_press:
                root.press()
            on_release:
                root.release()
                app.root.current = "main_menu"
                root.manager.transition.direction = "right"

        Label:
            color: (0, 0, 0, 1)
            text: "Secondhand smoke kills, you know. It's far worse than the fumes you inhale directly. Take diethylene, one of those nasty carcinogens your doctor might have warned you about on your last visit. Firsthand smoke has between 5.3 and 43 nanograms of diethylene, whereas, secondhand smoke has 680 and 823 nanograms. Then we've got quinoline, another effective one, secondhand smoke has 18,000 nanograms; 11 times more than the amount you're sucking down firsthand. You can make the choice to blacken your lungs, but don't expect to enforce that on me. Secondhand smoke kills, you know. It's far worse than the fumes you inhale directly. Take diethylene, one of those nasty carcinogens your doctor might have warned you about on your last visit. Firsthand smoke has between 5.3 and 43 nanograms of diethylene, whereas, secondhand smoke has 680 and 823 nanograms. Then we've got quinoline, another effective one, secondhand smoke has 18,000 nanograms; 11 times more than the amount you're sucking down firsthand. You can make the choice to blacken your lungs, but don't expect to enforce that on me."
            text_size: self.width, None
            font_size: root.height/40

            size_hint: 0.6, 0.6
            pos: (root.width/3, 1.1*root.height/3)

        Label:
            color: (0, 0, 0, 1)
            text: "Secondhand smoke kills, you know. It's far worse than the fumes you inhale directly. Take diethylene, one of those nasty carcinogens your doctor might have warned you about on your last visit. Firsthand smoke has between 5.3 and 43 nanograms of diethylene, whereas, secondhand smoke has 680 and 823 nanograms. Then we've got quinoline, another effective one, secondhand smoke has 18,000 nanograms; 11 times more than the amount you're sucking down firsthand. You can make the choice to blacken your lungs, but don't expect to enforce that on me."
            text_size: self.width, None
            font_size: root.height/35

            size_hint: 0.85, 0.35
            pos: (root.width/9, root.height/13)

        Label:
            color: (0, 0, 0, 1)
            text: "Penny N."
            text_size: self.width, None
            font_size: root.height/40

            size_hint: 0.1, 0.05
            pos: (root.width/6.5, root.height/2.5)

            canvas.before:
                PushMatrix
                Rotate:
                    angle: 25
                    origin: self.center
            canvas.after:
                PopMatrix

