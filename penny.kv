        Rectangle:
            pos: self.pos
            size: self.size
            source: 'menu.jpg'
    name: "menu"

    GridLayout:
        cols: 3
        padding: [10, 0, 10, 0]

        Button:

        GridLayout:
            rows: 3

            Button:
            Button:

            BoxLayout:
                padding: [0, 0, 0, 100]
                Button:
                    #font_size: 105
                    font_size: root.height/5
                    font_name: "Ebrima"
                    text: "Start"
                    bold: True
                    color: 0, 0, 102, 1

                    on_press:
                        root.press()
                    on_release:
                        root.release()
                        app.root.current = "main_menu"
